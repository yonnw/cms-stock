<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>DV_gestObra</title>
    <link rel="icon" type="~/image/png" sizes="16x16" href="~/images/favicon.png">
    <link href="~/plugins/tables/css/datatable/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <div id="main-wrapper">
        <div class="nav-header">
            <div class="brand-logo">
                <a href="/">
                    <b class="logo-abbr"><img src="~/images/logo.png" alt=""> </b>
                    <span class="logo-compact"><img src="~/images/logo-compact.png" alt=""></span>
                    <span class="brand-title">
                        <img src="~/images/logo-text.png" alt="">
                    </span>
                </a>
            </div>
        </div>
        <div class="header">    
            <div class="header-content clearfix">
                
                <div class="nav-control">
                    <div class="hamburger">
                        <span class="toggle-icon"><i class="icon-menu"></i></span>
                    </div>
                </div>
                <div class="header-right">
                    <ul class="clearfix">
                        <li class="icons dropdown">
                            <div class="user-img c-pointer position-relative"   data-toggle="dropdown">
                                <span class="activity active"></span>
                                <img src="~/images/user/1.png" height="40" width="40" alt="">
                            </div>
                            <div class="drop-down dropdown-profile   dropdown-menu">
                                <div class="dropdown-content-body">
                                    <ul>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logout">Sair</a></li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="nk-sidebar">           
            <div class="nk-nav-scroll">
                <ul class="metismenu" id="menu">
                    <li class="nav-label">Dashboard</li>
                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-link menu-icon"></i><span class="nav-text">Artigos</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a class="dropdown-item" asp-area="" asp-controller="Artigos" asp-action="Index">Lista de Artigos</a></li>
                        </ul>
                    </li>
                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-link menu-icon"></i><span class="nav-text">Movimentos Artigos</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a class="dropdown-item" asp-area="" asp-controller="ArtCentroCustos" asp-action="Index">Movimentos</a></li>
                        </ul>
                    </li>
                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-user menu-icon"></i><span class="nav-text">Funcionários</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a class="dropdown-item" asp-area="" asp-controller="Funcionarios" asp-action="Index">Lista de Funcionários</a></li>
                        </ul>
                    </li>
                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-user menu-icon"></i><span class="nav-text">Movimentos Funcionários</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a class="dropdown-item" asp-area="" asp-controller="FuncCentroCustos" asp-action="Index">Movimentos</a></li>
                        </ul>
                    </li>
                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-support menu-icon"></i><span class="nav-text">Equipamentos</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a class="dropdown-item" asp-area="" asp-controller="Equipamentos" asp-action="Index">Lista de Equipamentos</a></li>
                        </ul>
                    </li>
                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-support menu-icon"></i><span class="nav-text">Movimentos Equipamentos</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a class="dropdown-item" asp-area="" asp-controller="EquiCentroCustos" asp-action="Index">Movimentos</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        @RenderBody()
    </div>

    <script src="~/plugins/common/common.min.js"></script>
    <script src="~/js/custom.min.js"></script>
    <script src="~/js/settings.js"></script>
    <script src="~/js/gleek.js"></script>
    <script src="~/js/styleSwitcher.js"></script>
    <script src="~/plugins/tables/js/jquery.dataTables.min.js"></script>
    <script src="~/plugins/tables/js/datatable/dataTables.bootstrap4.min.js"></script>
    <script src="~/plugins/tables/js/datatable-init/datatable-basic.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

<div class="footer">
    <div class="copyright">
        <p>Copyright &copy; Designed & Developed by <a href="https://themeforest.net/user/quixlab">Quixlab</a> 2018</p>
    </div>
</div>