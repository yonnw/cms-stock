@model IEnumerable<cms_stock.Models.Dominio.Entidades.CentroCusto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutQuixlab.cshtml";
}

<div class="content-body">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Centros de Custo</h4>
                <p><a asp-action="Create">Novo</a></p>
                <div class="table-responsive">
                    <table class="table header-border">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Artigos</th>
                                <th>Funcionários</th>
                                <th>Equipamentos</th>
                                <th></th>
                            </tr>
                        </thead>
                            <tbody>
                            @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <th>
                                    @Html.ActionLink("Inserir", "Create", new { controller = "ArtCentroCustos", action = "Create", CCustoid = item.Id, NCCusto = item.Nome })
                                </th>
                                <th>
                                    @Html.ActionLink("Inserir", "Create", new { controller = "FuncCentroCustos", action = "Create", CCustoid = item.Id, NCCusto = item.Nome })
                                </th>
                                <th>
                                    @Html.ActionLink("Inserir", "Create", new { controller = "EquiCentroCustos", action = "Create", CCustoid = item.Id, NCCusto = item.Nome })
                                </th>
                                <th></th>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                            }
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
</div>