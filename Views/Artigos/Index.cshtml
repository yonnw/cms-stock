@model IEnumerable<cms_stock.Models.Dominio.Entidades.Artigo>

@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSbadmin.cshtml"; }


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Lista de Artigos</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Referência</th>
                        <th>Nome</th>
                        <th>Stock</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Referência</th>
                        <th>Nome</th>
                        <th>Stock</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Referencia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stockatual)
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>