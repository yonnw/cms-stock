@model cms_stock.Models.Dominio.Entidades.Artigo

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Referencia" class="control-label"></label>
    <input asp-for="Referencia" class="form-control" />
    <span asp-validation-for="Referencia" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Nome" class="control-label"></label>
    <input asp-for="Nome" class="form-control" />
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="PCusto" class="control-label"></label>
    <input asp-for="PCusto" class="form-control" />
    <span asp-validation-for="PCusto" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Unidade" class="control-label"></label>
    <input asp-for="Unidade" class="form-control" />
    <span asp-validation-for="Unidade" class="text-danger"></span>
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="Inativo" /> @Html.DisplayNameFor(model => model.Inativo)
    </label>
</div>
<div class="form-group">
    <label asp-for="Observacao" class="control-label"></label>
    <input asp-for="Observacao" class="form-control" />
    <span asp-validation-for="Observacao" class="text-danger"></span>
</div>
<div class="form-group">
    <input type="submit" value="Create" class="btn btn-primary" />
</div>