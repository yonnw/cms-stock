@model cms_stock.Models.Dominio.Entidades.Artigo

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutQuixlab.cshtml";
}

<div class="content-body">
    <div class="card">
        <div class="card-body">
            <h3>Tem a certeza que quer apagar?</h3>
            <div>
                <h4>Artigo</h4>
                <hr />
                <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Referencia)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Referencia)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Inativo)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Inativo)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Stockatual)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Stockatual)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Observacao)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Observacao)
                    </dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Voltar</a>
                </form>
            </div>
        </div>
    </div>
</div>