@model IEnumerable<cms_stock.Models.Dominio.Entidades.Funcionario>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutQuixlab.cshtml";
}


<div class="content-body">
    <div class="card">
        <div class="card-body">
            <p>
                <a asp-action="Create">Criar</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            Valor Dia
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Inativo)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @String.Format("{0:#,###.00€}", item.Valordia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Inativo)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>