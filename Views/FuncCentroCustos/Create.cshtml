@model cms_stock.Models.Dominio.Entidades.FuncCentroCusto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutQuixlab.cshtml";

    var nomeFuncionarios = ViewData["NomeFuncionarios"];
}

<div class="content-body">
    <div class="card">
        <div class="card-body">
            <h1>Adicionar funcionário</h1>
            <h4>Centro de Custo: @ViewBag.nomeccusto</h4>
            <hr />
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Funcionário
                        </th>
                        <th>
                            Check
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <form asp-action="Create" asp-route-CentroCustoId="@ViewBag.ccusto">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @foreach (var item in ViewData["Funcionarios"] as IEnumerable<cms_stock.Models.Dominio.Entidades.Funcionario>)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    <input class="form-check-input" type="checkbox" name="Id @item.Id">
                                </td>
                            </tr>
                            }

                            <input type="submit" value="Create" class="btn btn-primary" />
                            <div class="form-group">
                                Data (Obrigatório)
                                <input asp-for="Data" class="form-control" type="date"/>
                                <span asp-validation-for="Data" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                Quantidade (Obrigatório)
                                <input asp-for="Qtd" class="form-control" />
                                <span asp-validation-for="Qtd" class="text-danger"></span>
                            </div>
                    </form>
                </tbody>
            </table>
            <div>
                <a asp-action="Index">Voltar</a>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }

        </div>
    </div>
</div>