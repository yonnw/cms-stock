@model cms_stock.Models.Dominio.Entidades.FuncCentroCusto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutQuixlab.cshtml";
}

<div class="content-body">
    <div class="card">
        <div class="card-body">
            <h1>Detalhes</h1>
            <div>
                <h4>Funcionários por Centro de Custo</h4>
                <hr />
                <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.CentroCusto)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.CentroCusto.Nome)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Funcionario)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Funcionario.Nome)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Data)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Data)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Qtd)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Qtd)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Valor)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Valor)
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                <a asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</div>