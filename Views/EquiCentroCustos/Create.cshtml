@model cms_stock.Models.Dominio.Entidades.EquiCentroCusto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutQuixlab.cshtml";
}

<div class="content-body">
    <div class="card">
        <div class="card-body">
            <h1>Adicionar equipamento</h1>
            <h4>Centro de Custo: @ViewBag.nomeccusto</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create" asp-route-CentroCustoId="@ViewBag.ccusto">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="EquipamentoId" class="control-label"></label>
                            <select asp-for="EquipamentoId" class="form-control" asp-items="ViewBag.EquipamentoId"></select>
                        </div>
                        <div class="form-group">
                            Quantidade (1 = Dia Completo)
                            <input asp-for="Qtd" class="form-control" />
                            <span asp-validation-for="Qtd" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Voltar</a>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
            
        </div>
    </div>
</div>
