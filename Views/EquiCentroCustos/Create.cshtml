@model cms_stock.Models.Dominio.Entidades.EquiCentroCusto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutQuixlab.cshtml";
}

<div class="content-body">
    <div class="card">
        <div class="card-body">
            <h1>Adicionar equipamento</h1>
            <h4>Centro de Custo: @ViewBag.nomeccusto</h4>
            <hr />
                <div class="col-lg-4">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Equipamento
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <form asp-action="Create" asp-route-CentroCustoId="@ViewBag.ccusto">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    @foreach (var item in ViewData["Equipamentos"] as IEnumerable<cms_stock.Models.Dominio.Entidades.Equipamento>)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>
                                        <td>
                                            <input class="form-check-input" type="checkbox" name="Id @item.Id">
                                        </td>
                                    </tr>
                                    }     
                                    <div class="form-group col-sm-6">
                                        Data (Obrigatório)
                                        <input asp-for="Data" class="form-control" type="date"/>
                                        <span asp-validation-for="Data" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-sm-4">
                                        Quantidade (1 = Dia Completo)
                                        <input asp-for="Qtd" class="form-control" />
                                        <span asp-validation-for="Qtd" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Criar" class="btn btn-primary" />
                                    </div>    
                            </form>
                        </tbody>
                    </table>
                </div>

            <div>
                <a asp-action="Index">Voltar</a>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }

        </div>
    </div>
</div>