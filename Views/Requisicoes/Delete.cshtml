@model cms_stock.Models.Dominio.Entidades.Requisicao

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutQuixlab.cshtml";
}

<div class="content-body">
    <div class="card">
        <div class="card-body">
            <div>
                <h4>Requisição</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Centro de Custo
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CentroCusto.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        Funcionário
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Funcionario.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        Data da Requisição
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DataPedido)
                    </dd>
                    <dt class="col-sm-2">
                        Nome do Material
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NomeMaterial)
                    </dd>
                    <dt class="col-sm-2">
                        Requisição Concluida?
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Concluido)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Voltar</a>
                </form>
            </div>
        </div>
    </div>
</div>