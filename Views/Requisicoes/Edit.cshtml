@model cms_stock.Models.Dominio.Entidades.Requisicao

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutQuixlab.cshtml";
}

<div class="content-body">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            Centro de Custo
                            <select asp-for="CentroCustoId" class="form-control" asp-items="ViewBag.CentroCustoId"></select>
                            <span asp-validation-for="CentroCustoId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            Funcionário
                            <select asp-for="FuncionarioId" class="form-control" asp-items="ViewBag.FuncionarioId"></select>
                            <span asp-validation-for="FuncionarioId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            Data da Requisição
                            <input asp-for="DataPedido" class="form-control" />
                            <span asp-validation-for="DataPedido" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            Nome do Material
                            <input asp-for="NomeMaterial" class="form-control" />
                            <span asp-validation-for="NomeMaterial" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Concluido" /> @Html.DisplayNameFor(model => model.Concluido)
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Voltar</a>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
        </div>
    </div>
</div>